@page
@using BigMammaPizzaGroup.Model;
@model BigMammaPizzaGroup.Pages.Menukort.PizzaMenuModel
@{
    
    ViewData["Title"] = "Pizza Menu";
}
<link rel="index" type="text/css" href="/pages/index.css">
<h1 class="jumbotron">Pizza Menu med Pizza p</h1>

<div class="row">
    <div class="col">
<form method="post">
Sorter efter
<input type="submit" value="nummer" asp-page-handler="Nummer" />
<input type="submit" value="pris" asp-page-handler="Pris" />
</form>
<table class="table-hover">
    <thead>
        <tr>
            <th>Nummer</th>
            <th>Navn</th>
            <th>Beskrivelse</th>
            <th>pris</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (Items p in Model.AllItems)
        {   
            <tr>
                <td>@p.Number</td>
                <td>@p.Name</td>


                <td>@if(p is Pizza)
                    { Pizza pizza = p as Pizza;
                        pizza.GetToppings();
                    }
                    </td>
                <td>@p.Price Kr.</td>
                <form method="post">
                <td><input type="submit" value="Tilføj til kurv" class="btn btn-secondary" asp-page-handler="Tilføj" asp-route-nummer="@p.Number"></td>
                </form>

            </tr>
        }
    </tbody>
</table>
    </div>
    <div class="col">
        <div class="text-box">
            
                    <span>@Model.Mad2</span>
                    <form method="post">
                    <button type="button" class="btn btn-danger" asp-page-handler="Delete">X</button>
                    </form>
            
        </div>
    </div>
</div>
<p>That was it</p>
